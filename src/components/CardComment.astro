---
const { firstname, lastname, message, note} = Astro.props;
---
<div class="card bg-base-100 w-86 shadow-xl">
  <div class="card-body">
    <h2 class="card-title mx-auto mb-4">{firstname} {lastname}</h2>
    <hr>
    <p>{ message}</p>
    <div class="flex justify-between my-5 items-center">
      <div class="flex">
        {
          Array.from({ length: 5 }, (_, i) =>
            i < note
              ? <i class="fa-solid fa-star text-yellow-400"/>
              : <i class="fa-regular fa-star text-gray-400"/>
          )
        }
      </div>
      <div class="card-actions justify-end">
        <a class="btn btn-primary" href="/">Voir le projet</a>
      </div>
    </div>
  </div>
</div>