---
import Layout from '../layouts/Layout.astro';
import PageHeader from "../components/PageHeader.astro";
import InputForm from "../components/Form/InputForm.astro";
import TextareaForm from "../components/Form/TextareaForm.astro";
import CheckboxForm from "../components/Form/CheckboxForm.astro";
---

<Layout>
  <PageHeader title="Contact" />
  <div class="container mx-auto">
    <h2 class="text-center text-2xl font-bold my-12">Faisons connaissance</h2>
    <form method="post" action="https://api.web3forms.com/submit" class="my-24 border py-12 px-24 rounded-md shadow">
      <div class="">
        <div class="">
          <p class="text-center text-xl font-bold mb-5">Une idée de projet ?</p>
          <!-- todo : modifier numéro de contact -->
          <p class="mb-5">Contactez-nous au <strong>06 66 66 66 66</strong> ou via ce formulaire pour étudier votre besoin</p>
        </div>
        <!--TODO: adjouter la clé pour Web3Form-->
        <!--<input type="hidden" name="access_key" value="">-->
        <InputForm label="Prénom *" name="firstname" type='text' />
        <InputForm label="Nom *" name="lastname" type='text' />
        <InputForm label="Email *" name="email" type='email' />
        <InputForm label="Téléphone *" name="tel" type='tel' />
        <InputForm label="Objet *" name="object" type='text' />
        <TextareaForm label="Message *" name="message" />
          <div class="form-control">
            <div class="flex items-center gap-3">
              <label class="label cursor-pointer" for="allow">
                <!--TODO: ajouter lien vers la page reglement -->
                <span class="label-text">J'accepte que mes données soient utilisées pour le <a class="underline font-bold" href="/">traitement</a> de ma demande *</span>
              </label>
              <input type="checkbox" class="checkbox" id="allow"/>
            </div>
          </div>
     </div>
      <div class="flex justify-center gap-x-14 mt-10">
        <a href="/" class="btn">Retour</a>
        <button type="submit" class="btn btn-primary">Envoyer</button>
      </div>
    </form>
  </div>
</Layout>
